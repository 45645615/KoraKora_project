                            <Button x:Name="BrowserDel" Command="{Binding owo}" Content="-" Height="40" Margin="45.2,5,4.8,4.6" RenderTransformOrigin="0.452,1.065" Click="BrowserDelOnClick" FontSize="24" Grid.Column="1"/>
                        </Grid>
